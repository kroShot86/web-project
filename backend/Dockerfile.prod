FROM node:18-alpine as frontend-builder
WORKDIR /frontend
COPY frontend/package*.json ./
RUN npm install
COPY frontend/ ./
RUN npm run build
FROM node:18-alpine
WORKDIR /app
COPY backend/package*.json ./
RUN npm install --only=production
COPY backend/ ./
COPY --from=frontend-builder /frontend/build ./public
RUN echo "Frontend files in public directory:" && ls -la ./public
EXPOSE 5000
CMD ["node", "server.js"]